class Solution {
    public int scoreOfString(String s) {
        char [] character= s.toCharArray();
        int sum =0;
        for(int i=0; i<character.length-1;++i){

            int ascValue = character[i];
            int nextAsc = character[i+1];
            int diff=(ascValue-nextAsc);
            if(diff<0){
                diff=diff*-1;
            }
            sum =sum + diff;
        }
        return sum;
    }
}
