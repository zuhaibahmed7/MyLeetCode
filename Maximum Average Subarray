class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int sum = 0;

        for (int i = 0; i < k; ++i) {
            sum += nums[i];
        }
        double maxAvg = sum / (double) k;

        for (int j = k; j < nums.length; j++) {
            sum = sum - nums[j - k] + nums[j]; 
            double avg = sum / (double) k;
            maxAvg = Math.max(maxAvg, avg);
        }
        return maxAvg;
    }
}
