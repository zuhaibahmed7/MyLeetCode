class Solution {
    public boolean isPalindrome(String s) {
        Stack<Character> stack = new Stack<>();
        
        s = s.replaceAll("[^a-zA-Z0-9]","").toLowerCase();
        int len = s.length();
        for (int i = 0; i<len; ++i){
            stack.push(s.charAt(i));
        }
        String newStr ="";
        while(!stack.isEmpty()){
            newStr+=stack.pop();
        }
        if(newStr.equals(s)){
            return true;
        }
        return false;
    }
}
